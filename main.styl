col = #4682B4
style(size)
    padding size
    margin size

body
    background-color #FFFAFA
    font 15px arial

.menu
    display:flex;
    justify-content:center;
    font-weight bold
    margin 20px
    flex-wrap: wrap
    & img
        width 90px

.item
    style(10px)
    font-size 20px
    &:hover
        color col
    & .m
        color col

.item1
    margin 3px
    margin-right 50px
    padding-top 10px
    font-size 30px
    & .text
        font-size 15px

h1
    color col
    text-align center

.gallery
    display block
    text-align center
    position:relative;
    margin 2%
    & img
        width 60%
    & div
        display flex
        position: absolute;
        background-color rgba(0, 0, 0,.4)
        bottom: 1%; left: 20%; right: 20%
        font-size 20px
        color snow
        padding 1%

.container
    display:inline-block;
    position:relative;
    & img
       width 100%
    & div
        display flex
        position: absolute;
        flex-direction column
        background-color rgba(255, 250, 250,.6)
        top: 20%; left: 60%; right: 5%
        font-size 20px
        padding 2%

.block
    display flex
    height 300px
    margin 3%
    background-color col
    justify-content space-around
    & img
        height 300px
    & .text
        padding 30px
        color snow
        font-size 15px

.sblock
    display flex
    height 200px
    margin 3%
    padding 1%
    background-color col
    justify-content space-around

a
    color black
    &:hover
        color black
        text-decoration none

.footer
    display flex
    background-color black
    width: 100%
    margin-top 10px
    padding 30px
    color snow
    & li:hover
        color col

table
    margin-bottom 3%
    width 50%

@media (max-width 1000px)
    .container div
        font-size 14px
        left 5%
        top 0
    .block
        flex-direction column
        height 100%
        & img
            height 100%

    table
        width 95%

    .sblock
        flex-direction column
        height 100%

    .gallery
        & img
            width 95%
        & div
            bottom: 1%; left: 2.5%; right: 2.5%

    .menu
        margin 5px
        padding 5px
        & img
            width 50px

    .item1
        padding-top 5px
        font-size 15px
        & .text
            font-size 15px

    .item
        style(3px)
        font-size 20px